/* pages/We/We.wxss */

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

/*搜索盒模型  */

.seach {
  width: 800rpx;
  height: 70rpx;
  background-color: #e4e3e3;
  margin: 0 auto;
  /*border-radius: 20rpx;*/
}

/*搜索icon  */

.sea {
  width: 35rpx;
  height: 35rpx;
  padding-left: 20rpx;
  padding-top: 18rpx;
  float: left;
}

/*搜索框  */

.input {
  height: 70rpx;
  display: block;
  margin-left: 35rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
}
.add_symbol{
  width: 80rpx;
  height: 80rpx;
  display: block;
  background-color:#1cbbb4;
  position: fixed;
  z-index: 9;
  border-radius: 50%;
  bottom: 35rpx;
  right: 35rpx;
  box-shadow:2px 1px 2px #888888;
}
.add_symbol::before, .add_symbol::after{
  content: "";
  display: inline-block;
  width: 26rpx;
  height: 3rpx;
  background-color: rgba(255, 255, 255, 1);
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -1.5rpx;
  margin-left: -13rpx;
}
.add_symbol::after{
  transform: rotate(90deg)
}
